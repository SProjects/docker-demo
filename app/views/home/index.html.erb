    <center>
        <h2 class="ui header">ToDo</h2>
    </center>
    <hr/>

    <div class="ui middle aligned center aligned grid vertical-center">
        <% unless @tasks.empty? %>
            <table class="ui celled table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    <% @tasks.each do |task| %>
                        <tr>
                            <td>
                                <%= task.title %>
                            </td>
                            <td>
                                <%= task.description %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        <% else %>
            No tasks at this time.
        <% end %>
    </div>